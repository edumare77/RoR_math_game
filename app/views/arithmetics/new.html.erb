<% provide(:title, "Game") %>
<h1>Game</h1>
<h2>Let's Play</h2>
<table border>
<tr>
<th>Total score</th>
<th>Subtraction</th>
<th>Addition</th>
<th>Multiplication</th>
</tr>
<tr>
<td><%= @total_score %></td>
<td><%= @result_sub  %></td>
<td><%= @result_add  %></td>
<td><%= @result_mult  %></td>
</tr>

</table>
<br /><br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_tag arithmetics_path do  %>
     
     
     <%= label_tag :subtraction %><br />
     <%= @sub1 %>  -   <%= @sub2 %>  <%= number_field_tag :sub, class: 'form-control' %>
     <%= hidden_field_tag :subtraction, @sub1 - @sub2 %><br /><br />
      
      <%= label_tag :addition %><br />
      <%= @add1 %>  +   <%= @add2 %>  <%= number_field_tag :add, class: 'form-control' %>
      <%= hidden_field_tag :addition, @add1 + @add2 %><br /><br />
      
      <%= label_tag :multiplication %><br />
      <%= @mult1 %>  x   <%= @mult2 %>  <%= number_field_tag :mult, class: 'form-control' %>
      <%= hidden_field_tag :multiplication, @mult1 * @mult2 %><br /><br />


      <%= submit_tag "Get result", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>